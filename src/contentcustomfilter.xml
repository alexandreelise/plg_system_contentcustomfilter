<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.9" group="system" method="upgrade">
    <name>PLG_SYSTEM_CONTENTCUSTOMFILTER</name>
    <author>Alexandre ELISÉ</author>
    <creationDate>2021-03-03</creationDate>
    <copyright>Copyright (C) 2009 - 2021 Alexandre ELISÉ. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>contact@alexandre-elise.fr</authorEmail>
    <authorUrl>https://coderparlerpartager.fr</authorUrl>
    <version>2.1.0</version>
    <description>PLG_SYSTEM_CONTENTCUSTOMFILTER_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>
    <media folder="media" destination="plg_system_contentcustomfilter">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_contentcustomfilter.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_contentcustomfilter.sys.ini</language>
        <language tag="fr-FR">language/fr-FR/fr-FR.plg_system_contentcustomfilter.ini</language>
        <language tag="fr-FR">language/fr-FR/fr-FR.plg_system_contentcustomfilter.sys.ini</language>
    </languages>
    <files>
        <filename plugin="contentcustomfilter">contentcustomfilter.php</filename>
        <filename>helper.php</filename>
        <filename>script.php</filename>
        <filename>LICENSE</filename>
        <folder>language</folder>
        <folder>media</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="enable_article_styling"
                       type="radio"
                       default="1"
                       label="PLG_SYSTEM_CONTENTCUSTOMFILTER_ENABLE_ARTICLE_STYLING_LABEL"
                       description="PLG_SYSTEM_CONTENTCUSTOMFILTER_ENABLE_ARTICLE_STYLING_DESCRIPTION"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="enable_collect_filtered_ids"
                       type="radio"
                       default="0"
                       label="PLG_SYSTEM_CONTENTCUSTOMFILTER_ENABLE_COLLECT_FILTERED_IDS_LABEL"
                       description="PLG_SYSTEM_CONTENTCUSTOMFILTER_ENABLE_COLLECT_FILTERED_IDS_DESCRIPTION"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
